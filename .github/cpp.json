{
	"problemMatcher": [
		{
			"owner": "gcc",
			"pattern": [
				{
					"regexp": "(\\x1b\\[[0-9;]*m)*^([^:]+):.*(\\d+):(\\d+):\\s+(?:fatal )?(\\x1b\[[0-9;]*m)*(warning|error|note):(\\x1b\\[[0-9;]*m)*\\s+(.*)$",
					"file": 2,
					"line": 4,
					"column": 3,
					"severity": 6,
					"message": 8
				}
			]
		},
		{
			"owner": "msvc",
			"pattern": [
				{
					"regexp": "^(.*)\\((\\d+),?(\\d*)\\)\\s*:\\s*(error|warning|message)\\s+(\\w+\\s*:\\s+.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			]
		}
	]
}
